<Window x:Class="ConquerButler.Gui.MainWindow" Icon="chef.ico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConquerButler.Gui"
        mc:Ignorable="d"
        Title="Conquer Butler" Height="700" Width="800" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <DockPanel x:Name="RootPanel">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button x:Name="startTasks" Width="100" Margin="10,5,10,0"
                    VerticalAlignment="Top" HorizontalAlignment="Left"
                    Content="Start tasks" Click="StartTasks_OnClick"/>
            <Button x:Name="stopTasks" Width="100" Margin="10,5,10,0"
                    VerticalAlignment="Top" HorizontalAlignment="Left"
                    Content="Stop tasks" Click="StopTasks_OnClick"/>

            <Button x:Name="grabArea" Width="100" Margin="10,5,10,0"
                                VerticalAlignment="Top" HorizontalAlignment="Left"
                                Content="Grab area" Click="GrabArea_OnClick"/>

            <Label Content="X" Margin="150,5,5,5" HorizontalAlignment="Right"></Label>
            <Label Content="{Binding Path=Model.SelectedProcess.MousePosition.X}" Margin="0,5,30,5" HorizontalAlignment="Right"></Label>
            <Label Content="Y" Grid.Row="0" Margin="0,5,0,5" HorizontalAlignment="Right"></Label>
            <Label Content="{Binding Path=Model.SelectedProcess.MousePosition.Y}" Margin="0,5,0,5" HorizontalAlignment="Right"></Label>
        </StackPanel>
        <ListBox x:Name="processList"
                 DockPanel.Dock="Left"
                 Margin="10,0,10,10"
                 ItemsSource="{Binding Path=Model.Processes}"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    SelectedItem="{Binding Model.SelectedProcess, Mode=TwoWay}"
                    MouseDoubleClick="processList_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="160" Source="{Binding Path=Thumbnail}"></Image>
                        <Grid ShowGridLines="False" Margin="10,10,10,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Content="Name" Grid.Row="1" Margin="10,0,10,0"></Label>
                            <Image Source="{Binding Path=Name}" HorizontalAlignment="Left" Margin="100,0,10,0" Grid.Row="1" Width="100" Height="11"></Image>

                            <Label Content="Tasks" Grid.Row="2" Margin="10,0,10,0"></Label>
                            <ListBox x:Name="taskList"
                                Grid.Row="2"
                                Width="420" Margin="100,10,10,10"
                                ItemsSource="{Binding Path=Tasks}"
                                IsEnabled="False"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                ScrollViewer.CanContentScroll="True"
                                ScrollViewer.VerticalScrollBarVisibility="Visible">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="{Binding Path=DisplayInfo}"></Label>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <local:NonTopmostPopup x:Name="GrabPopup" StaysOpen="True" Placement="Mouse">
            <Border BorderBrush="Black" Background="White" BorderThickness="2">
                <DockPanel>
                    <StackPanel>
                        <Button Content="Close" HorizontalAlignment="Left" Click="CloseGrab_OnClick" Width="50" Margin="10,10,10,10"></Button>
                        <Button Content="Clear" HorizontalAlignment="Left" Click="ClearStrokes_OnClick" Width="50" Margin="10,10,10,10"></Button>
                        <Button Content="Show" HorizontalAlignment="Left" Click="ShowStrokes_OnClick" Width="50" Margin="10,10,10,10"></Button>
                    </StackPanel>
                    <InkCanvas x:Name="GrabCanvas" EditingMode="Ink" Width="1024" Height="768">
                        <InkCanvas.Background>
                            <ImageBrush ImageSource="{Binding Model.GrabProcess.InkCanvasSource}"/>
                        </InkCanvas.Background>
                    </InkCanvas>
                </DockPanel>
            </Border>
        </local:NonTopmostPopup>
    </DockPanel>
</Window>
